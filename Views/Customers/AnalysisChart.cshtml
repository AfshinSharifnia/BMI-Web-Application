@model IEnumerable<BodyMassIndexer.Models.Customer>
@using System.Collections.Generic;
@using System.Web;
@using static Microsoft.EntityFrameworkCore.DbLoggerCategory;

<br />
<br />
<br />
<br />
<br />
<br />
<h5>
    Number of Customers :
    @Model.Count()
</h5>
<br />
<br />

<h5>
    Percentage of "Male" Customers :
    @(Math.Round((float)Model.Where(user => user.Gender == "Male").Count() / (float)@Model.Count(), 2) * 100) %
</h5>
<br />

<h5>
    Percentage of "Female" Customers :
    @(Math.Round((float)Model.Where(user => user.Gender == "Female").Count() / (float)@Model.Count(), 2) * 100) %
</h5>
<br />
<br />

<h5>
    Percentage of "Underweight" Customers :
    @(Math.Round((float)Model.Where(user => user.CategoryBMI == "Underweight").Count() / (float)@Model.Count(), 2) * 100) %
</h5>
<br />

<h5>
    Percentage of "Normal Weight" Customers :
    @(Math.Round((float)Model.Where(user => user.CategoryBMI == "Normal Weight").Count() / (float)@Model.Count(), 2) * 100) %
</h5>
<br />

<h5>
    Percentage of "Overweight" Customers :
    @(Math.Round((float)Model.Where(user => user.CategoryBMI == "Overweight").Count() / (float)@Model.Count(), 2) * 100) %
</h5>
<br />

<h5>
    Percentage of "Obesity" Customers :
    @(Math.Round((float)Model.Where(user => user.CategoryBMI == "Obesity").Count() / (float)@Model.Count(), 2) * 100) %
</h5>
<br />
